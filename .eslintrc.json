{
  "extends": ["airbnb", "plugin:meteor/recommended"],
  "plugins": ["meteor"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "import/core-modules": [
      "meteor/meteor",
      "meteor/blaze",
      "meteor/templating",
      "meteor/react-meteor-data",
      "meteor/alanning:roles",
      "meteor/service-configuration"
    ]
  },
  "rules": {
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "constructor-super": "warn",
    "valid-typeof": "warn",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}
